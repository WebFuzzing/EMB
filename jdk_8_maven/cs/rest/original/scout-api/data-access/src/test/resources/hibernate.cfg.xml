<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.archive.autodetection">class,hbm</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">jdbc:h2:mem:integrationtest</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <property name="hibernate.hbm2ddl.import_files_sql_extractor">org.hibernate.tool.hbm2ddl.MultipleLinesSqlCommandExtractor</property>

        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="se.devscout.scoutapi.model.SystemMessage"></mapping>
        <mapping class="se.devscout.scoutapi.model.User"></mapping>
        <mapping class="se.devscout.scoutapi.model.UserIdentity"></mapping>
        <mapping class="se.devscout.scoutapi.model.Tag"></mapping>
        <mapping class="se.devscout.scoutapi.model.TagDerived"></mapping>
        <mapping class="se.devscout.scoutapi.model.MediaFile"></mapping>
        <mapping class="se.devscout.scoutapi.model.Activity"></mapping>
        <mapping class="se.devscout.scoutapi.model.ActivityRelation"></mapping>
        <mapping class="se.devscout.scoutapi.model.ActivityDerived"></mapping>
        <mapping class="se.devscout.scoutapi.model.ActivityRating"></mapping>
        <mapping class="se.devscout.scoutapi.model.ActivityProperties"></mapping>
        <mapping class="se.devscout.scoutapi.model.ActivityPropertiesTag"></mapping>
        <mapping class="se.devscout.scoutapi.model.ActivityPropertiesMediaFile"></mapping>
    </session-factory>
</hibernate-configuration>